<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.doranco.quizz.PageQuizz">

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="411dp"
        android:layout_height="180dp"
        android:background="#00BCD4"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonReponse1"
        android:layout_width="414dp"
        android:layout_height="89dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#8BC34A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuestion" />

    <Button
        android:id="@+id/buttonReponse2"
        android:layout_width="414dp"
        android:layout_height="89dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#8BC34A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReponse1" />

    <Button
        android:id="@+id/buttonReponse3"
        android:layout_width="414dp"
        android:layout_height="89dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#8BC34A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReponse2" />

    <Button
        android:id="@+id/buttonReponse4"
        android:layout_width="414dp"
        android:layout_height="89dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#8BC34A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReponse3" />

</androidx.constraintlayout.widget.ConstraintLayout>